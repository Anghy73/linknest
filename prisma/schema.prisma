generator client {
  provider = "prisma-client-js"
  output   = "prismaApp/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  username   String
  email      String      @unique
  password   String
  role       Role        @default(USER)
  links      Link[]
  tags       Tag[]
  linkTags   LinkTag[]
  shortLinks ShortLink[]
  createdAt  DateTime    @default(now())
}

model Link {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  logo        String
  img         String
  url         String
  shortUrl    String
  comment     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      Int?
  guestId     String
  linkTags    LinkTag[]

  @@index([title])
}

model Tag {
  id      Int       @id @default(autoincrement())
  value   String    @unique
  label   String
  user    User?     @relation(fields: [userId], references: [id])
  userId  Int?
  guestId String
  links   LinkTag[]
}

// @@index([userId, value])
model LinkTag {
  id      Int     @id @default(autoincrement())
  link    Link    @relation(fields: [linkId], references: [id])
  linkId  Int
  tag     Tag     @relation(fields: [tagId], references: [id])
  tagId   Int
  user    User?   @relation(fields: [userId], references: [id])
  userId  Int?
  guestId String
}

model ShortLink {
  id        Int      @id @default(autoincrement())
  url       String
  shortUrl  String @unique
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  guestId   String
}

enum Role {
  USER
  ADMIN
}
